<resources>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="MD" parent="Theme.MaterialComponents">
        <item name="android:windowIsTranslucent">false</item>
        <item name="colorPrimary">@color/bai</item>
        <item name="colorPrimaryDark">@color/bai</item>
        <!-- 图标颜色-->
        <item name="colorControlNormal">@color/hei</item>
        <!--正常状态下字体颜色和icon颜色-->
        <item name="android:textColorPrimary">@color/hei</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/bai</item>
        <!--<item name="android:tint">@color/bai</item>-->
    </style>

    <style name="dibu">
        <item name="android:color">@color/colorAccent</item>
       <!--<item name="android:colorControlHighlight">#D8D8D8</item>-->
        <item name="android:radius">30dp</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bai</item>
        <item name="colorPrimaryDark">@color/bai</item>
        <item name="android:windowFullscreen">false</item>
        <!-- 图标颜色-->
        <item name="android:colorControlNormal">@color/hei</item>
        <!--正常状态下字体颜色和icon颜色-->
        <item name="android:textColorPrimary">@color/hei</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!--设置显示wallpaper，否则会显示出launcher的图标-->
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="RippleWhite">
        <!-- <item name="android:colorControlHighlight">#D8D8D8</item>-->
        <item name="android:radius">20dp</item>
    </style>

    <style name="m">
        <!-- <item name="android:colorControlHighlight">#D8D8D8</item>-->
        <item name="android:radius">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="toolbar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bai</item>
        <item name="colorPrimaryDark">@color/bai</item>
        <!-- 图标颜色-->
        <item name="android:colorControlNormal">@color/hei</item>
        <!--正常状态下字体颜色和icon颜色-->
        <item name="android:textColorPrimary">@color/hei</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThem" parent="Theme.AppCompat.Light.DarkActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hui</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
